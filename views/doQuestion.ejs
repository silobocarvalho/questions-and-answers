<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container">
        <div class="card-header">
            <h3>Ask a question</h3>
        </div>
        <div class="card-body" id="form-ask-question">
            <form action="/savequestion" method='POST'>
                <label for="questiontitle" class="mt-2">Question title:</label>
                <input type="text" name="questiontitle" placeholder="Put a title for your question..."
                    class="form-control">
                <label for="questioncontent" class="mt-2">Question content:</label>
                <textarea name="questioncontent" id="questioncontent" cols="30" rows="10" placeholder="Ask your question here..."
                    class="form-control"></textarea>
                <button class="btn btn-primary mt-2">Submit</button>
        </div>
        </form>
    </div>
</body>
